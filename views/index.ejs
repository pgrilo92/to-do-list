<!DOCTYPE html>
<html>
  <head>
    <title>To Do List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script defer src="/javascripts/ajaxRequests.js"></script>
  </head>
  <body>
    <h1>To Do List</h1>
    <div class="list">
    <ul>
      <% if (todos.length > 0) { %>
        <% todos.forEach( (todo, idx) => { %>  
          <li> <%= todo.todo %> - <%= todo.done ?  "Done" : "Not Done" %> </li>
          <form action="/<%= idx %>?_method=DELETE" method="POST" id="delete-form">
            <input type="submit" value="Delete">
          </form>
        <% }) %>
      <% } else{ %>
        <h3>There are no ToDos yet </h3>
      <% } %>
    </ul>
  </div>
  <hr>
  <form action="/" method="POST" id="submit-todo">
    <input id="input-todo" name="enter" placeholder="Enter a To-Do" value="">
    <input type="submit" class="button" value="Add To Do">
  </form>
  </body>
</html>
